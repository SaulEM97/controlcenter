<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ControlCenter Dashboard</title>

    <!-- AdminLTE + FontAwesome -->
    <link rel="stylesheet" href="/adminlte/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/adminlte/css/adminlte.min.css">

    <!-- Pink Style -->
    <link rel="stylesheet" href="/css/custom.css">
</head>

<body class="hold-transition sidebar-mini" style="background-color:#fff;">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item d-none d-sm-inline-block">
                    <span class="nav-link" style="color:#ff4da6;font-weight:bold;">
                        ControlCenter
                    </span>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/logout" class="nav-link text-danger">
                        <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="content-wrapper">
            <section class="content pt-3">
                <div class="container-fluid">

                    <div class="row">

                        <!-- Pipelines Exitosos -->
                        <div class="col-lg-3 col-6">
                            <div class="small-box" style="background-color:#ff99cc;color:white;">
                                <div class="inner">
                                    <h3>5</h3>
                                    <p>Pipelines exitosos hoy</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-code-branch"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Último despliegue -->
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3>Hace 2 hrs</h3>
                                    <p>Último despliegue</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-rocket"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Contenedores activos -->
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3>3</h3>
                                    <p>Contenedores activos</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-cubes"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Estado del sistema -->
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3>OK</h3>
                                    <p>Estado del sistema</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-heartbeat"></i>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </section>
        </div>
    </div>

    <script src="/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="/adminlte/js/adminlte.min.js"></script>
</body>
</html>
